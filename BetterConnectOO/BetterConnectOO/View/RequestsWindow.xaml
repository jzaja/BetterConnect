<Window x:Class="BetterConnectOO.View.RequestsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterConnectOO.View"
        mc:Ignorable="d"
        Title="RequestsWindow" Height="450" Width="711">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Background="LightGray">
            <StackPanel Orientation="Horizontal" Background="White" Height="100">
                <TextBlock Text="Poslani zahtjevi" FontSize="16" FontWeight="Bold" Foreground="Black" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="115,0,0,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="0" Background="#FF1C94F4">
            <StackPanel Orientation="Horizontal" Background="White">
                <Image Width="100" Height="100" Source="/Images/Logo/BetterConnect.png"/>
                <TextBlock FontSize="16" FontWeight="Bold" Foreground="Black" Text="Pristigli zahtjevi" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
