<Window x:Name="ProfileWindow" x:Class="BetterConnectOO.View.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterConnectOO.View"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Profile" Height="600" Width="678.522"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        Background="#FFDADADA">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="146*"/>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>
        <Border Background="White" Margin="20 20 20 20" CornerRadius="15" Grid.ColumnSpan="2">
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Image Width="100" Height="100" Source="/Images/Logo/BetterConnect.png"/>
                <Grid Margin="0 0 0 0" Height="50" Width="240">
                    <Button Content="Povratak" HorizontalAlignment="Right" Click="BackButton"/>
                </Grid>
            </StackPanel>
        </Border>
        <Image Width="100" Height="100" Source="/Images/user.png" HorizontalAlignment="Center" Margin="147,120,45.15,351"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" Margin="97,0,97,50" Content="Dodaj interes" Grid.ColumnSpan="2" Click="OnEditButton"/>
        <TextBlock x:Name="UsernameTextBlock" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="140,0,0,300" Height="30" Width="349"  />
        <TextBlock x:Name="PhoneNumberTextBlock" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="140,0,0,260" Height="30" Width="349"/>
        <TextBlock x:Name="InterestsTextBlock" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="140,0,0,102" Height="148" Width="359"/>
    </Grid>
</Window>
