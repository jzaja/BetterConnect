<Window x:Class="BetterConnectOO.View.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterConnectOO.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AdminWindow" Height="625.105" Width="1187.866">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Background="White" Margin="154,0,-448,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="142*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <StackPanel Grid.Column="0" Background="#FF1C94F4" Grid.ColumnSpan="2" Margin="0,0,197,0">
            <StackPanel Orientation="Horizontal" Background="White" Height="158">
                <Image Width="199" Height="100" Source="/Images/Logo/BetterConnect.png" Margin="0,29"/>
                <Label Content="Admin console" FontWeight="Bold" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="SlateGray" Width="210"></Label>
                <Button Click="OnLogout" >Odjavi se</Button>
            </StackPanel>
            <TextBox Name="InterestSearchTextBox" FontSize="16" materialDesign:HintAssist.Hint="Pretraživanje po interesu" Margin="20 10" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Foreground="White"/>
            <Button Content="Traži" Background="Coral" Click="OnSearch" />
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="154,0,-478,0">
            <ListView Name="UserGrid" Margin="0,10,10,10" ItemsSource="{ Binding Users }">


                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontSize="20" Foreground="#FF1C94F4" Text="{Binding username}"></TextBlock>
                                <TextBlock Text="{Binding interestsString}"></TextBlock>
                            </StackPanel>
                            <Button Margin="150,0,0,0" Click="OnBlock" Background="Red" >Blokiraj</Button>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>


            </ListView>
        </StackPanel>

    </Grid>
</Window>
